# Environment Configuration Template
# Copy this file to .env and fill in values

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=loyaltyforge
POSTGRES_PASSWORD=your_password_here
POSTGRES_DB_AUTH=loyaltyforge_auth
POSTGRES_DB_ECOMMERCE=loyaltyforge_ecommerce
POSTGRES_DB_POINTS=loyaltyforge_points
POSTGRES_DB_REWARDS=loyaltyforge_rewards

# RabbitMQ
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_here
JWT_ISSUER=loyaltyforge
JWT_AUDIENCE=loyaltyforge-api
JWT_EXPIRY_MINUTES=60

# Service Ports
AUTH_SERVICE_PORT=7001
ECOMMERCE_SERVICE_PORT=7002
POINTS_SERVICE_PORT=7003
REWARDS_SERVICE_PORT=7004
GATEWAY_SERVICE_PORT=7005

# Shopify (E-commerce Integration)
SHOPIFY_WEBHOOK_SECRET=your_shopify_webhook_secret

# Logging
LOG_LEVEL=Information
